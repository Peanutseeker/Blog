---
import { SITE_TITLE } from '../consts';

export interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const navItems = [
  { name: 'Blogs', href: '/blog/', path: '/blog' },
  { name: 'Work', href: '/work/', path: '/work' },
  { name: 'About', href: '/about/', path: '/about' }
];

function isActive(itemPath: string, current: string): boolean {
  if (itemPath === '/blog' && (current.startsWith('/blog') || current === '/')) {
    return current.startsWith('/blog') || current === '/';
  }
  return current.startsWith(itemPath);
}
---

<header class="site-header">
  <div class="header-container">
    <div class="site-title">
      <a href="/">{SITE_TITLE}</a>
    </div>
    
    <nav class="main-navigation">
      <div class="nav-tabs">
        {navItems.map((item) => (
          <a 
            href={item.href}
            class={`nav-tab ${isActive(item.path, currentPath) ? 'nav-tab--active' : ''}`}
          >
            <span class="nav-tab__text">{item.name}</span>
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<style>
  .site-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1rem 0;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
  }

  .site-title a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s ease;
  }

  .site-title a:hover {
    color: #8B5CF6;
  }

  .main-navigation {
    display: flex;
    align-items: center;
  }

  .nav-tabs {
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #F3E8FF, #E9D5FF);
    padding: 0.5rem;
    border-radius: 2rem;
    box-shadow: 0 4px 20px rgba(139, 92, 246, 0.15);
  }

  .nav-tab {
    display: inline-block;
    position: relative;
    padding: 0.75rem 1.5rem;
    margin: 0 0.25rem;
    text-decoration: none;
    color: #6B7280;
    font-weight: 500;
    border-radius: 1.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    clip-path: polygon(0 0, calc(100% - 15px) 0, 100% 50%, calc(100% - 15px) 100%, 0 100%, 15px 50%);
  }

  .nav-tab:hover {
    color: #8B5CF6;
    background: rgba(139, 92, 246, 0.1);
  }

  .nav-tab--active {
    background: linear-gradient(135deg, #8B5CF6, #A78BFA);
    color: white;
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
    clip-path: polygon(0 0, calc(100% - 15px) 0, 100% 50%, calc(100% - 15px) 100%, 0 100%, 15px 50%);
  }

  .nav-tab--active:hover {
    background: linear-gradient(135deg, #7C3AED, #8B5CF6);
    color: white;
  }

  .nav-tab__text {
    position: relative;
    z-index: 1;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1rem;
    }

    .site-title {
      font-size: 1.25rem;
    }

    .nav-tabs {
      padding: 0.25rem;
    }

    .nav-tab {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0 100%, 10px 50%);
    }

    .nav-tab--active {
      clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 50%, calc(100% - 10px) 100%, 0 100%, 10px 50%);
    }
  }

  @media (max-width: 480px) {
    .header-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-tabs {
      background: none;
      padding: 0;
      box-shadow: none;
      flex-direction: column;
      gap: 0.5rem;
    }

    .nav-tab {
      margin: 0;
      width: 200px;
      text-align: center;
    }
  }
</style>